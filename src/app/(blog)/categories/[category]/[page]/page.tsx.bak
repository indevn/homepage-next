import { redirect } from 'next/navigation';

interface PageProps {
  params: { category: keyof typeof categoryAliasMap, page: number };
}

const categoryAliasMap = {
  nichijou: '日常',
  tech: '技术'
};

const getCategoryAlias = (category: keyof typeof categoryAliasMap) => categoryAliasMap[category] || category.toUpperCase();

export function generateStaticParams() {
  return [
    { category: 'nichijou' },
    { category: 'tech' }
  ];
}

export function generateMetadata({ params }: PageProps) {
  return {
    title: getCategoryAlias(params.category)
  };
}

export default function Page({ params }: PageProps) {
  const { category } = params;

  const availableCategories = Object.keys(categoryAliasMap);
  if (!availableCategories.includes(category)) {
    redirect('/404');
  }

  const categoryAlias = getCategoryAlias(category);

  return (
    <div>
      <h1 className="text-4xl">{categoryAlias}</h1>
    </div>
  );
}
